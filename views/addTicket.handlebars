<div class="content myPanel">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="card">
                    <div class="header">
                        <h4 class="title">New Ticket</h4>
                    </div>
                    <div class="content">
                        <form method="post" method="get" id="ticket-form" action="addTicket">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input type="text" class="form-control" id="ticket-title" placeholder="Title" name="title"
                                               required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select class="form-control select" id="ticket-status" name="selectStatus">
                                            <option>open</option>
                                            <option>closed</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Creation Date</label>
                                        <input type="date" class="form-control" name="creationDate"
                                               value={{formatDate creationDate}} readonly>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Author</label>
                                        <input type="text" class="form-control" name="author"
                                               value={{loggedUser.email}} readonly>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Assignee</label>
                                        <select class="form-control select" id="ticket-assignee" name="selectAssignee">
                                            <option value= {{loggedUser.email}} selected>{{loggedUser.email}}</option>
                                            {{#each userOptions}}
                                                <option value= {{this.email}}>{{this.email}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="5" class="form-control" id="ticket-body" placeholder="Ticket description"
                                                  name="body" required></textarea>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info btn-fill pull-right">Create</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>