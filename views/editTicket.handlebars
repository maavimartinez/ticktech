<div class="content myPanel">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Ticket</h4>
                    </div>
                    <div class="content">
                        <form method="post" method="get" action="{{selectedTicket.title}}">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input type="text" class="form-control"
                                               value={{selectedTicket.body}} placeholder="Title" name="title" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select class="form-control select" name="selectStatus">
                                            <option>open</option>
                                            <option>closed</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Creation Date</label>
                                        <input type="date" class="form-control" name="creationDate"
                                               value={{formatDate selectedTicket.created}} readonly>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Author</label>
                                        <input type="text" class="form-control" name="author"
                                               value={{selectedTicket.author}} readonly>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Assignee</label>
                                        <select class="form-control select" name="selectAssignee">
                                            <option value = {{selectedTicket.assignee}}>{{selectedTicket.assignee}}</option>
                                            {{#each userOptions}}
                                                <option value = {{this.email}}>{{this.email}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="5" class="form-control" placeholder="Ticket description"
                                                  name="body" required>{{selectedTicket.body}}</textarea>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info btn-fill pull-right">Update</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>